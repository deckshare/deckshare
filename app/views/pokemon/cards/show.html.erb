<div class="flex flex-row">
  <div class="w-1/3 pr-8">
    <%= image_tag @card.images.large %>
  </div>
  <div class="w-2/3">
    <h1 class="font-bold text-4xl">
      <%= @card.name %>
      <% @card.types&.each do |t| %>
        <i class="energy <%= t.downcase %>"></i>
      <% end %>
    </h1>
  </div>
</div>
<div class="flex flex-row flex-wrap">
  <% @card.similar_cards.each do |card| %>
    <%= link_to image_tag(card.images.small, alt: card, title: card), card %>
  <% end %>
</div>
